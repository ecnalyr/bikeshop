<% content_for :body_content_title do %>
  <%= @ride.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @ride.name %>
    </p>
  </section>
  <section>
    <h1>Time</h1>
    <p>
      <%=raw @ride.time %>
    </p>
  </section>
  <section>
    <h1>Phone</h1>
    <p>
      <%=raw @ride.phone %>
    </p>
  </section>
  <section>
    <h1>Location</h1>
    <p>
      <%=raw @ride.location %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @ride.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="rides">
      <% @rides.each do |ride| %>
        <li>
          <%= link_to ride.name, refinery.rides_ride_path(ride) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
